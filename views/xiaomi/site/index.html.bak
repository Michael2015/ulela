											{set: break;}
										{elseif: $_commend['commend_id'] == 4}
											<div class="item-tag bg-green pos-absolute f-12 text-center">商家推荐</div>
											{set: break;}
										{/if}
									{/foreach}
								{/if}
								
							</li>
						{/foreach}
					</ul>
				</div>
			</div>
		</div>
		{/foreach}


		<!--推荐列表-->
